<p>
  <strong>Name</strong>
  <%= @course.name %>
</p>
<table>
  <tr><th>Student Name</th></tr>
  <% @course.students.each do |student| %>
    <tr><td><%= student.name %></td></tr>
  <% end %>
</table>

<h3><%= link_to "All Courses", courses_path %></h3>

<%= form_for :membership, url: memberships_path do |f| %>
  <%= f.collection_select :student_id, Student.all, :id, :name %>
  <%= f.hidden_field :course_id, value: @course.id %>
  <%= f.submit "Add Student" %>
<% end %>

